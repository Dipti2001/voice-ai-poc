# Voice AI Agent System Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED: Twilio Configuration
# ==========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# REQUIRED: AI Services Configuration
# ==========================================
# OpenRouter API Key (for GPT-4 access)
LLM_API_KEY=your_openrouter_api_key_here

# Deepgram API Key (for ASR and TTS)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ==========================================
# OPTIONAL: Application Configuration
# ==========================================
# Server Configuration
PORT=3000
NODE_ENV=development

# Base URL for webhooks and static files
APP_BASE_URL=http://localhost:3000

# WebSocket Configuration
WS_PORT=8080

# ==========================================
# OPTIONAL: AI Model Configuration
# ==========================================
# LLM Settings
LLM_PROVIDER=openrouter
LLM_MODEL=openai/gpt-4o
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=10000

# Deepgram Settings
DEEPGRAM_STT_MODEL=nova-2
DEEPGRAM_TTS_MODEL=aura-asteria-en

# ==========================================
# OPTIONAL: Security & Performance
# ==========================================
# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=*

# Audio Configuration
MAX_AUDIO_FILE_SIZE=52428800
AUDIO_CLEANUP_INTERVAL=86400000

# ==========================================
# SETUP INSTRUCTIONS
# ==========================================
# 1. Copy this file to .env
# 2. Fill in all REQUIRED values above
# 3. Run: npm run init-db (to initialize the database)
# 4. Run: npm start (to start the server)
# 5. Open http://localhost:3000 in your browser
#
# For production deployment:
# - Set NODE_ENV=production
# - Configure proper APP_BASE_URL
# - Set up SSL certificates
# - Configure firewall and security groups